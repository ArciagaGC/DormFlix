<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <TextView
        android:id="@+id/headSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Create your Account"
        android:textSize="20dp"
        android:textColor="@color/dark"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/signPic"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/signup"
        android:layout_below="@+id/headSign" />

    <TextView
        android:id="@+id/fName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signPic"

        android:text="Full Name"
        android:textSize="13dp"
        android:paddingLeft="10dp" />
    <EditText
        android:id="@+id/editFName"
        android:layout_width="405dp"
        android:layout_height="35dp"
        android:layout_below="@id/fName"
        android:inputType="textPersonName"
        android:hint="Enter Full Name"
        android:paddingLeft="8dp"
        android:textSize="15dp"

        android:backgroundTint="#D3D3D3"
        android:background="@drawable/border" />

    <TextView
        android:id="@+id/pNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:layout_below="@+id/editFName"
        android:textSize="13dp"
        android:paddingLeft="5dp" />
    <EditText
        android:id="@+id/editPNum"
        android:layout_width="405dp"
        android:layout_height="35dp"
        android:layout_below="@id/pNum"
        android:inputType="text|number"
        android:hint="Enter Phone Number"
        android:paddingLeft="8dp"
        android:textSize="15dp"

        android:backgroundTint="#D3D3D3"
        android:background="@drawable/border" />

    <TextView
        android:id="@+id/eMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Email Address"
        android:layout_below="@+id/editPNum"
        android:textSize="13dp"
        android:paddingLeft="10dp" />
    <EditText
        android:id="@+id/editEMail"
        android:layout_width="405dp"
        android:layout_height="35dp"
        android:layout_below="@id/eMail"
        android:inputType="textEmailAddress"
        android:hint="Enter EmailAddress"
        android:paddingLeft="8dp"
        android:textSize="15dp"

        android:backgroundTint="#D3D3D3"
        android:background="@drawable/border" />

    <TextView
        android:id="@+id/signPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Password"
        android:layout_below="@+id/editEMail"
        android:textSize="13dp"
        android:paddingLeft="10dp" />
    <EditText
        android:id="@+id/editPass"
        android:layout_width="405dp"
        android:layout_height="35dp"
        android:layout_below="@id/signPass"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:paddingLeft="8dp"
        android:textSize="15dp"

        android:backgroundTint="#D3D3D3"
        android:background="@drawable/border" />

    <TextView
        android:id="@+id/signConPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editPass"
        android:text="Confirm Password"
        android:textSize="13dp"
        android:paddingLeft="10dp" />
    <EditText
        android:id="@+id/editConPass"
        android:layout_width="405dp"
        android:layout_height="35dp"
        android:layout_below="@id/signConPass"
        android:inputType="textPassword"
        android:hint="Enter Password"
        android:paddingLeft="10dp"
        android:textSize="15dp"

        android:backgroundTint="#D3D3D3"
        android:background="@drawable/border" />

    <Button
        android:id="@+id/signBtn"
        android:layout_width="290dp"
        android:layout_height="55dp"
        android:layout_below="@id/editConPass"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppins_medium"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/already1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signBtn"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_medium"
        android:text="I'm already a user. "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signBtn"
        android:layout_toRightOf="@id/already1"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:text=" Login"
        android:clickable="true"
        android:textSize="14sp"
        android:textColor="@color/green"/>

</RelativeLayout>